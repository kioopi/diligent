{
  "runtime": {
    "version": "Lua 5.4",
    "path": ["lua/?.lua", "lua/?/init.lua"],
    "pathStrict": true
  },
  "workspace": {
    "library": [
      "${3rd}/luafilesystem/library",
      "${3rd}/busted/library",
      "${3rd}/luassert/library",
      "${3rd}/lgi/library",
      "${3rd}/dkjson/library",
      "${3rd}/penlight/library",
      "${3rd}/lua-cliargs/library"
    ],
    "checkThirdParty": "Disable",
    "ignoreDir": [".luacov", "luacov.stats.out", ".notes", ".zed", ".claude"]
  },
  "diagnostics": {
    "enable": true,
    "globals": [
      "describe",
      "it",
      "setup",
      "teardown",
      "before_each",
      "after_each",
      "pending",
      "insulate",
      "expose",
      "assert",
      "spy",
      "mock",
      "stub",
      "awesome",
      "client",
      "screen",
      "tag",
      "root",
      "mouse",
      "awful",
      "wibox",
      "beautiful",
      "gears",
      "naughty",
      "menubar",
      "keygrabber",
      "mousegrabber",
      "timer",
      "drawable",
      "drawin",
      "selection"
    ],
    "disable": ["lowercase-global"],
    "severity": {
      "redefined-local": "Warning",
      "trailing-space": "Hint",
      "unused-local": "Information",
      "unused-function": "Information",
      "empty-block": "Information",
      "redundant-parameter": "Information"
    }
  },
  "format": {
    "enable": false
  },
  "telemetry": {
    "enable": false
  },
  "hint": {
    "enable": true,
    "arrayIndex": "Auto",
    "await": true,
    "paramName": "All",
    "paramType": true,
    "semicolon": "SameLine",
    "setType": false
  },
  "completion": {
    "enable": true,
    "callSnippet": "Replace",
    "displayContext": 3,
    "keywordSnippet": "Replace",
    "postfix": ".",
    "requireSeparator": ".",
    "showParams": true,
    "workspaceWord": true
  },
  "type": {
    "castNumberToInteger": false,
    "weakNilCheck": false,
    "weakUnionCheck": false
  },
  "spell": {
    "dict": []
  }
}
